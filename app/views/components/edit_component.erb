<div class="jumbotron text-center">
  <h1><%= @component.name %></h1>
  <h2>Edit component</h2>
</div>
<form method="post" action="/components/<%= @component.id %>/edit">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label for="name">Component name</label>
    <input type="text" class="form-control" name="name" id="name" value="<%= @component.name %>">
  </div>
  <div class="form-group">
    <label for="description">Component description</label>
    <input type="text" class="form-control" name="description" value="<%= @component.description %>" id="description">
  </div>
  <div class="form-group">
    <legend>Component category</legend>
    <% @categories.each do |category| %>
      <div class="form-check">
        <div class="form-check-label">
          <label for="<%= "#{category.id}" %>">
          <input type="radio" class="form-check-input" name="category_id" id="<%= category.id %>" value="<%=category.id %>" <%= "checked=\"checked\"" if category.id == @component.category.id %>>
          <%= category.name %>
          </label>
        </div>
      </div>
    <% end if @categories%>
  </div>
  <button type="submit" value="submit" class="btn btn-primary">Submit</button>
</form>