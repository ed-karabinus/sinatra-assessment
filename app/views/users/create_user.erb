<div class="jumbotron text-center">
  <h1>Sign up</h1>
  <% if flash[:error] %>
    <% flash[:error].each do |warning| %>
      <p><%= warning %></p>
    <% end %>
  <% end %>
</div>
<form method="post" action="/signup">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" class="form-control" name="username" id="username" <%= "value=\"#{flash[:username]}\"" if flash[:username] %> placeholder="Username">
    <small id="usernameHelp" class="form-text text-muted">Your username must be unique.</small>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name="email" id="email" <%= "value=\"#{flash[:email]}\"" if flash[:email] %> placeholder="Email">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
    <br><br>
    <button type="submit" value="Create New User" class="btn btn-primary">Submit</button>
  </div>
</form>
<p>Already have an account? <a href="/login">Log in.</a></p>